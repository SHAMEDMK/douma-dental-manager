# Database (PostgreSQL)
# Replace with your actual PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/douma_dental?schema=public"

# Authentication
# REQUIRED: Generate a strong secret for production
# Generate with: openssl rand -base64 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET="REPLACE-WITH-STRONG-RANDOM-SECRET-MINIMUM-32-BYTES"

# Application
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Admin User (for seed script)
# REQUIRED: Set a strong password for the initial admin user
# The seed script will create admin@douma.com with this password
ADMIN_PASSWORD="REPLACE-WITH-STRONG-ADMIN-PASSWORD"

# Emails (Resend) â€” required for invitation, password reset, notifications in production
# Get your API key at https://resend.com
RESEND_API_KEY="re_..."
