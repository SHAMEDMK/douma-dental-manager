{
  "name": "tactac",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/run-dev.js",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset-password": "node scripts/reset-admin-password.js",
    "db:update-client-password": "node scripts/update-client-password.js",
    "db:reset-client-balance": "node scripts/reset-client-balance.js",
    "db:ensure-client-credit": "node scripts/ensure-client-credit.js",
    "db:backup": "node scripts/backup-db.js",
    "db:backup:manual": "node scripts/backup-db.js --manual",
    "db:migrate:delivery-agents": "tsx scripts/migrate-delivery-agent-ids.ts",
    "db:fix:user-types": "tsx scripts/fix-misclassified-users.ts",
    "db:fix:user-types:livreur": "tsx scripts/fix-misclassified-users.ts --target=LIVREUR",
    "backup:copy": "node scripts/copy-backups.js",
    "backup:path": "node scripts/show-backup-path.js",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "jose": "^6.1.3",
    "lucide-react": "^0.561.0",
    "next": "16.1.6",
    "prisma": "^5.22.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-hot-toast": "^2.6.0",
    "resend": "^6.7.0",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5",
    "zod": "^4.3.5"
  },
  "overrides": {
    "baseline-browser-mapping": "latest"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sharp": "^0.31.1",
    "@types/xlsx": "^0.0.35",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.17"
  }
}
