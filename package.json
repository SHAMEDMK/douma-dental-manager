{
  "name": "tactac",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/run-dev.js",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cross-env E2E_SEED=1 playwright test",
    "test:e2e:ui": "cross-env E2E_SEED=1 playwright test --ui",
    "test:e2e:ci": "cross-env CI=1 E2E_SEED=1 playwright test",
    "test:e2e:dev": "cross-env E2E_SEED=1 playwright test --headed --workers=2",
    "test:e2e:debug": "cross-env E2E_SEED=1 playwright test --debug",
    "test:e2e:single": "cross-env E2E_SEED=1 playwright test tests/e2e/delivery-workflow.spec.ts",
    "test:e2e:fresh": "node scripts/kill-port.js 3000 && cross-env E2E_SEED=1 playwright test",
    "test:e2e:check": "node scripts/check-e2e-setup.js",
    "test:e2e:validate-payment": "node scripts/validate-payment-fix.js",
    "test:e2e:validate-payment:full": "node scripts/validate-payment-fix.js --full",
    "kill-port-3000": "node scripts/kill-port.js 3000",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:e2e": "cross-env E2E_SEED=1 tsx prisma/seed.ts",
    "db:fill-skus": "node scripts/fill-missing-product-skus.js",
    "db:reset-password": "node scripts/reset-admin-password.js",
    "db:reset-client-password": "node scripts/reset-client-password.js",
    "db:reset-staff-passwords": "node scripts/reset-staff-passwords.js",
    "db:reset-commercial-livreur": "node scripts/reset-commercial-livreur-passwords.js",
    "db:create-commercial": "node scripts/create-commercial-user.js",
    "db:create-comptable-magasinier": "node scripts/create-comptable-magasinier.js",
    "db:update-client-password": "node scripts/update-client-password.js",
    "db:reset-client-balance": "node scripts/reset-client-balance.js",
    "db:ensure-client-credit": "node scripts/ensure-client-credit.js",
    "db:backup": "node scripts/backup-db.js",
    "db:backup:manual": "node scripts/backup-db.js --manual",
    "db:migrate:delivery-agents": "tsx scripts/migrate-delivery-agent-ids.ts",
    "db:fix:user-types": "tsx scripts/fix-misclassified-users.ts",
    "db:fix:user-types:livreur": "tsx scripts/fix-misclassified-users.ts --target=LIVREUR",
    "backup:copy": "node scripts/copy-backups.js",
    "backup:path": "node scripts/show-backup-path.js",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "jose": "^6.1.3",
    "lucide-react": "^0.561.0",
    "next": "16.1.6",
    "prisma": "^5.22.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-hot-toast": "^2.6.0",
    "resend": "^6.7.0",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "exceljs": "^4.4.0",
    "zod": "^4.3.5"
  },
  "overrides": {
    "baseline-browser-mapping": "latest"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sharp": "^0.31.1",
    "@vitest/ui": "^4.0.17",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.17"
  }
}
